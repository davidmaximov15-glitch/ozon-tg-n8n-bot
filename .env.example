# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-n8n-instance.com/webhook/telegram-webhook

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_EDITOR_BASE_URL=https://your-n8n-instance.com

# Super Admins (comma-separated Telegram user IDs)
SUPER_ADMINS=123456789,987654321

# Session Configuration
SESSION_TTL=86400
DATASET_TTL=259200

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# Application Settings
NODE_ENV=production
LOG_LEVEL=info
TZ=Europe/Moscow
